{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    "typeRoots": ["helpers/types", "node_modules/@types"]
  },
  "exclude": ["./node_modules"]
}
